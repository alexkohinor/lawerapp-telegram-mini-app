# TimeWeb Cloud оптимизация
fetch-timeout=300000
fetch-retry-maxtime=300000
fetch-retry-mintime=10000
fetch-retries=5
registry=https://registry.npmjs.org/
progress=false
loglevel=warn

# Отключаем postinstall скрипты для проблемных пакетов
ignore-scripts=false

# Кэширование
cache-max=86400000
cache-min=3600000

# Безопасность
audit=false
fund=false